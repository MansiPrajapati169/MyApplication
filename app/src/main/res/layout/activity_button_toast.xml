<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    tools:context=".ButtonToast">

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="click me"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttonripple"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/button1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="custom toast"
        android:layout_below="@id/button"
        android:background="@drawable/buttonripple"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="10dp"/>
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:textColor="@color/white"
        android:textOn="toggle ON"
        android:textOff="toggle Off"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttonripple"
        android:id="@+id/toggle">
    </ToggleButton>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/toggle"
        android:text="Pizza" />
    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/checkBox1"
        android:text="Coffee" />

    <ImageButton
        android:id="@+id/weversebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggle"
        android:background="@drawable/buttonshape"
        android:src="@mipmap/weverse_logo_foreground"></ImageButton>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/weversebutton"
        android:layout_below="@id/checkBox1"
        android:background="@drawable/buttonripple"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="10dp"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_below="@id/submit"
        android:layout_height="wrap_content"
        android:text="Switch1"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/weversebutton"
        android:checked="true"
        android:textOff="OFF"
        android:layout_marginBottom="10dp"
        android:textOn="ON"/>
    <Button
        android:id="@+id/get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get"
        android:background="@drawable/buttonripple"
        android:layout_toRightOf="@id/weversebutton"
        android:layout_below="@id/switch1"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/get">
    <RadioButton
        android:id="@+id/radioBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="male" />
    <RadioButton
        android:id="@+id/radioBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="female">
    </RadioButton>
    </RadioGroup>

    <Button
        android:id="@+id/getgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gender"
        android:layout_toRightOf="@id/radioGroup"
        android:textColor="@android:color/background_light"
        android:background="@drawable/buttonripple"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/get"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>